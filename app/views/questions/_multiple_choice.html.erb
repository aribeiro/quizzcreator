<div class="choice">
  <div class="float_label" >   
    <p>
      <%= f.label :answer %>
      <%= f.text_field :answer %>
    </p>  
  </div>
  
  <div class="float_label" >   
    <p>
      <%= f.label :is_correct %>
      <%= f.select :is_answer, [false,true] %>
    </p>  
  </div>
    
  <div class="float_label" >   
    <p>
      <!-- For existing records we add a checkbox to be able to delete records. -->
      <%= f.check_box :_delete %>
      <%= f.label :_delete, "remove" %>
    </p>
  </div>
</div>
<br class="clear" />

