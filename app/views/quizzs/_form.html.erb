<% javascript :defaults, 'delegate' %>
<% form_for @quizz do |f| -%>
  <%= f.error_messages %>
  <% content_for :jstemplates do -%>
      <%= "var question='#{generate_template(f, :questions)}'" %>
  <% end %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "100x3" %>
  </p>

  <div id="questions">
    <% @quizz.questions.build unless @quizz.questions.size > 0 %>
    <% f.fields_for :questions do |question_form| %>
      <%= render :partial => 'question' , :locals => { :f => question_form } %>
    <% end %>
  </div>
  <p><%= link_to 'Add a question', '#question', :class => "add_nested_item", :rel => "questions" %></p>

  <br class="clear" />
  <p><%= f.submit "Submit" %></p>
<% end -%>
